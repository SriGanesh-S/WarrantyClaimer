
<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
     

      <ul>
        <% address.errors.each do |error| %>
          <%flash.now[:alert]=error.full_message%>
        <% end %>
      </ul>
    </div>
  <% end %>
 

<div class="form-group">
   <strong><%= form.label :door_no %>
</strong>    <%= form.text_field :door_no ,class:"form-control"  %>
</div>
<div class="form-group">
     <strong><%= form.label :street %>
 </strong>    <%= form.text_field :street ,class:"form-control" %>
</div>
<div class="form-group">
     <strong><%= form.label :district %></strong>
     <%= form.text_field :district ,class:"form-control"%>
</div>
<div class="form-group">
     <strong><%= form.label :state %>
  </strong>   <%= form.text_field :state ,class:"form-control"%>
</div>
<div class="form-group">
     <strong><%= form.label :pin_code %></strong>
     <%= form.number_field :pin_code ,class:"form-control"%>
</div>
<div class="form-group">
     <strong><%= form.label :Phone %>
  </strong>   <%= form.number_field :phone ,class:"form-control"%>
</div>




  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

