<div style = "float:right ; margin-right : 250px">

<h1> Change your Primary Address here </h1>
<div style = "display : flex ; flex-direction : column">

    <h2> Your Addresses </h2>
    <br><br>
   <%if @addresses%>
    <%@addresses.each do |i|%>
        
            <div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">Address <%=@addresses.find_index(i)+1%></div>
  <div class="card-body">
    <h6 class="card-title"><%=" Door No : #{i.door_no}"%></h6>
    <h6 class="card-title"><%="Street : #{i.street}"%></h6>
    <h6 class="card-title"><%=" District: #{i.district}"%></h6>
    <h6 class="card-title"><%=" State: #{i.state}"%></h6>
    <h6 class="card-title"><%=" Pin Code: #{i.pin_code}"%></h6>
    <h6 class="card-title"><%=" Phone No: #{i.phone}"%></h6>
  
    <% unless current_user.userable.primary_address == i.id%>
    <%= link_to "Make as primary", primary_address_path(id: i.id) , class: "btn btn-primary btn-sm" %>
    <% else %>
        <button type="button" class="btn btn-secondary btn-sm" disabled>Primary Address</button>
    <% end %>
    <%end%>
  </div>
</div>
            
        
    <%end%>
</div>


  <h1> Add New Address </h1>
  <%= link_to "Add Address", new_address_path %>

</div>