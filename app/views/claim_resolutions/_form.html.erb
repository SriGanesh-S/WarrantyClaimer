<div class="col-lg-10" >
<%= form_with(model: @claim_resolution) do |form| %>
  <% if @claim_resolution.errors.any? %>
    <div id="error_explanation">
      
      <ul>
        <% @claim_resolution.errors.each do |error| %>
            <%flash.now[:alert]=error.full_message%>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :Warranty_claim_id %>
    <%= form.text_field :warranty_claim_id ,class:"form-control"%>
</div>
<div class="form-group">
     <%= form.label :status %>
     <%= form.text_field :status,class:"form-control" %>
</div>
<div class="form-group">
     <%= form.label :Description %>
     <%= form.text_field :description ,class:"form-control"%>
</div>


  <div class="actions">
   <%= link_to 'Back', :back, class: 'btn btn-secondary' %>

<%=form.submit "Update" , class: "btn btn-primary" , style:"margin-left: 20px"%>
  </div>
<% end %>
</div>