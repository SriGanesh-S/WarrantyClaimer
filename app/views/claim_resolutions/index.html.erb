<div class="col-lg-10" >
<p id="notice"><%= notice %></p>

<h1>Claim Resolution</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_resolutions.each do |claim_resolution| %>
      <tr>
        <td><%= claim_resolution.id %></td>
        <td><%= link_to 'Show', claim_resolution %></td>
        <td><%= link_to 'Edit', edit_claim_resolution_path(claim_resolution) %></td>
        <td><%= link_to 'Destroy', claim_resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Claim Status', new_claim_resolution_path %>
</div>