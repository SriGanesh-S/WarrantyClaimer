<div class="container">
<div class="col-lg-10" style="background-color: rgba(0, 0, 0, 0.5); padding: 20px; border-radius: 10px; margin-top: 50px; color: #fff;">
  <p id="notice" style="color: #fff;"><%= notice %></p>
  <h4><p><strong> Resolver:</strong> <%= @claim_resolution.warranty_claim.invoice.product.seller.name %></p></h4>
  <h4><p><strong>Organisation:</strong> <%= @claim_resolution.warranty_claim.invoice.product.seller.organisation_name %></p></h4>
  <h4><p><strong>Status:</strong> <%= @claim_resolution.status %></p></h4>
  <h4><p><strong>Description:</strong> <%= @claim_resolution.description %></p></h4>
  <h4><p><strong>Last Updated:</strong> <%= @claim_resolution.updated_at %></p></h4>

  <% if current_user.seller? %>
    <%= link_to 'Edit', edit_claim_resolution_path(@claim_resolution), class: 'btn btn-primary', style: 'background-color: charcoal; padding: 5px 20px; border-radius: 5px; border: none; color: #fff; text-decoration: none;' %> 
    <%= link_to 'Back', seller_dashboard_path, class: 'btn btn-secondary', style: 'background-color: charcoal; padding: 5px 20px; border-radius: 5px; border: none; color: #fff; text-decoration: none;' %>
  <% elsif current_user.customer? %>
    <%= link_to 'Back', cust_dashboard_path, class: 'btn btn-secondary', style: 'background-color: charcoal; padding: 5px 20px; border-radius: 5px; border: none; color: #fff; text-decoration: none;' %>
  <% end %>
</div>
</div>
