
<div>
<div class="col-lg-10" >
<h1>New Customer</h1>
<%if @customer.errors.any?%>
    <% @customer.errors.full_messages.each do|message| %>
     <p><%=message%></p>
    <%end%>
 <%end%>
<%=form_with model: @customer do|form|%>
<div>
    <%= form.label :Name %>
    <%= form.text_field :name %>
</div>
<div>
     <%= form.label :Email %>
     <%= form.email_field :email %>
</div>
<div>
     <%= form.label :Age %>
     <%= form.number_field :age %>
</div>
<div>
     <%= form.label :Gender %>
     <%= form.text_field :gender %>
</div>
<div>
     <%= form.label :Phone  %>
     <%= form.text_field :phone_no %>
</div>
<%=form.submit %>
<%end%>
</div>