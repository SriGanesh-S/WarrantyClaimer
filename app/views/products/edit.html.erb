<div class="col-lg-10" style="background-color: rgba(0, 0, 0, 0.5); padding: 20px; border-radius: 10px; margin-top: 50px;">
  <h1 style="color: #fff; text-align: center;">Edit Product</h1>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <p style="color: red;"><%= message %></p>
    <% end %>
  <% end %>
  <%= form_with model: @product do |form| %>
    <div class="form-group">
     <strong> <%= form.label :Name %></strong>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <strong> <%= form.label :Category %></strong>
      <%= form.text_field :category, class: "form-control" %>
    </div>
    <%= form.submit  %>
  <% end %>
</div>
