<div class="col-lg-10">
  <h1>Products List</h1>
 <h2> <%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
 </h2>
 
 <%if @products.size != 0 %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>S.No</th>
        <th>Name</th>
        <th>Category</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
    <%i=0%>
      <% @products.each do |product| %>
        <tr class="table-active">
          <td><%= i= i+1 %></td>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= link_to 'View', product, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
          <td>
            <%= link_to 'Delete', product_path(product), method: :delete,  class: 'btn btn-danger' 
             
             %>
             
                                   
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%else%>
      <h3>No Products Listed<h3>
  <%end%>
</div>
