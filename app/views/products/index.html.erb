<div class="col-lg-10" >
<h1>Products Lists </h1>
<%= link_to 'New Product',new_product_path %>
<table >
    <thead>
        <tr>  <th>ID</th> <th>Name </th> <th>Category </th> <th>Sold_Date</th> <th colspan ="3"> Actions</th></tr>
    <thead>
    <tbody>
        <%@products.each do |product| %>
       <tr>
        <td> <%= product.id %> </td>
        <td> <%= product.name %> </td>
         <td> <%= product.category %> </td>
         <td> <%= product.sold_date %> </td>
         <td> <%= link_to 'View',product %> </td>
          <td> <%= link_to 'Edit', edit_product_path(product)  %> </td>
          <td> <%= link_to 'Delete', product, method: :delete, data: {confirm: 'Are You Sure? Do you want to delete it' } %> </td>
       </tr>
       <%end%> 
    </tbody>
</table>
</div>