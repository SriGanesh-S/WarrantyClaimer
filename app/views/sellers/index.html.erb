<div class=col-lg-10>
<h1>Sellers Lists </h1>
<%= link_to 'New Seller',new_seller_path %>
<table>
    <thead>
        <tr>   <th>Id </th> <th>Name </th> <th>Email</th> <th colspan ="3"> Actions</th></tr>
    <thead>
    <tbody>
        <%@sellers.each do |seller| %>
       <tr>
        <td> <%= seller.id %> </td>
         <td> <%= seller.name %> </td>
         <td> <%= seller.email %> </td>
         <td> <%= link_to 'View',seller %> </td>
          <td> <%= link_to 'Edit', edit_seller_path(seller)  %> </td>
          <td> <%= link_to 'Delete', seller, method: :delete, data: {confirm: 'Are You Sure? Do you want to delete it' } %> </td>
       </tr>
       <%end%> 
       <tr> <td> <%= link_to 'View Claim Tickets', claim_statuses_path()  %> </td></tr>
        <tr> <td> <%= link_to 'Products Section', products_path()  %> </td></tr>
    </tbody>
</table>