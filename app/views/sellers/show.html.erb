<div class="col-lg-10 seller-details-container" style="background-color: rgba(0, 0, 0, 0.5); padding: 20px; border-radius: 10px; margin-top: 50px;">
  <h1 style="color: #fff;text-align: center;">Seller Details</h1>

   <p style="color: #fff; margin-left: 20px;"><strong>Name:</strong> <%= @seller.name %></p>
  <p style="color: #fff; margin-left: 20px;"><strong>Email:</strong> <%= @seller.email %></p>
  <p style="color: #fff; margin-left: 20px;"><strong>Organisation:</strong> <%= @seller.organisation_name %></p>
  <p style="color: #fff; margin-left: 20px;"><strong>Designation:</strong> <%= @seller.designation %></p>

  <div class="seller-details-actions" style="margin-top: 20px;">
    <%= link_to 'Back', seller_dashboard_path, class: 'btn btn-secondary', style: 'background-color: charcoal; padding: 5px 20px; border-radius: 5px; border: none; color: #fff; text-decoration: none;' %>
    <%= link_to 'Edit', edit_seller_path(@seller), class: 'btn btn-primary', style: 'background-color: charcoal; padding: 5px 20px; border-radius: 5px; border: none; color: #fff; text-decoration: none; margin-left: 10px;' %>
  </div>
</div>
